{
    "plugins": ["@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "printWidth": 120,
                "tabWidth": 4,
                "wrapAttributes": "auto",
                "sortTailwindcssClasses": true,
                "sortHtmlAttributes": "idiomatic",
                "noPhpSyntaxCheck": false
            }
        }
    ]
}
